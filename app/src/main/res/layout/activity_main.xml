<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern_four"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:text="Kurrency Convertor"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/multi_currency" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:hint="From Currency"
        android:completionThreshold="1"
        android:layout_alignTop="@id/textView"
        android:layout_height="wrap_content"
        android:id="@+id/autoEdit"
        />

    <EditText
        android:id="@+id/et_amount"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Amount" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:hint="To Currency"
        android:layout_margin="15dp"
        android:completionThreshold="1"
        android:layout_alignTop="@id/textView"
        android:layout_height="wrap_content"
        android:id="@+id/autoEdit_to"
        />

    <Button
        android:id="@+id/convert"
        style="@android:style/Widget.Holo.Light.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="To Currency"
        android:text="Convert"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/reverse"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_autorenew" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:layout_gravity="center"
        style="@style/TextAppearance.AppCompat.Large"
        />


</LinearLayout>